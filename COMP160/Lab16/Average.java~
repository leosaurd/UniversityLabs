public class Average{
      public static void main(String[]args){
          int [] [] table = {{1,2,3},{4,5,6},{7,8}};
          double sum = 0;
        for(int[] a : table){
          for (int[] b : a){
            sum += a;
            System.out.print(a + " ");
          }
          System.out.print("/tAverage : " + sum/(table.length));
        }
          
      }
}